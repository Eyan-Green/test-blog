<div class="h-full">
  <% flash.each do |type, msg| %>
    <div>
      <%= msg %>
    </div>
  <% end %>
  <h1 class="p-5 text-center font-bold text-5xl">All posts</h1>
  <% @posts.each do |post| %>
    <div class="border-2 border-black rounded-md p-5 space-y-5 mx-5 my-5 index-post">
      <h2 class="text-center m-0 text-3xl"><%= post.title %></h2>
      <p class="m-0"><%= truncate(post.content.to_plain_text, length: 300) %></p>
      <ul class="flex flex-row justify-center list-none space-x-5">
        <li><%= link_to 'View Post', post_path(post), class: 'call-to-action' %></li>
        <li><%= link_to 'Edit Post', edit_post_path(post), class: 'call-to-action' if policy(post).update? %></li>
      </ul>
    </div>
  <% end %>
</div>
