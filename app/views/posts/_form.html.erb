<%= form_with model: post do |form| %>
  <div class="flex flex-col justify-center">
    <% if form.object.errors.any? %>
      <div>
        <% form.object.errors.full_messages.each do |message| %>
          <div class="text-red-500 font-bold"><%= message %></div>
        <% end %>
      </div>
    <% end %>  
    <%= form.label :post_type_id %>
    <%= form.select :post_type_id, options_for_select(PostType.pluck(:name, :id)) %>
    <%= form.label :title %>
    <%= form.text_field :title, required: true %>
    <%= form.label :content %>
    <%= form.rich_text_area :content, class: 'customized-max-width', required: true %>
    <%= form.submit class: 'hover:cursor-pointer p-5 bg-blue-100 hover:bg-blue-300 my-5 rounded-md' %>
  </div>
<% end %>
