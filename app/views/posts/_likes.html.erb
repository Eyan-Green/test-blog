<%= tag.div class: 'flex flex-col md:flex-row items-center justify-start md:space-x-5', id: dom_id(post, :likes) do %>
  <%= tag.div id: "#{dom_id(post, :likes)}_count" do %>
    <%= render partial: 'posts/likes_count', locals: { post: post } %>
  <% end %>
  <%= button_to like_button_text(post), post_like_path(post), method: :patch, class: "#{blue_or_red(post)} p-2 rounded-md min-w-[75px]" %>
<% end %>
