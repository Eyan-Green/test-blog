<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>
<div class="px-5">
  <h2 class="m-5 text-center"><%= @post.title %></h2>
  <p><%= @post.content %></p>
  <ul class="flex flex-row justify-center list-none">
    <li><%= link_to 'Edit Post', edit_post_path(@post) %></li>
    <li><%= link_to 'All Posts', posts_path %></li>
  </ul>
</div>
