<% if flash[:notice] %>
<div class="flex justify-center items-center text-center mx-auto" role="alert">
  <div class="bg-green-400 mt-4 p-5 rounded-md font-bold">
    <%= flash[:notice] %>
  </div>
</div>
<% end %>

<% if flash[:alert] %>
<div class="flex justify-center items-center text-center mx-auto" role="alert">
  <div class="bg-red-400 mt-4 p-5 rounded-md font-bold">
    <%= flash[:alert] %>
  </div>
</div>
<% end %>